{% extends 'base.html.twig' %}

{% block body %}
    
        <!-- Forms -->
        <div class="row">
            <div class="col-sm-12">
                <div class="card-box">
                    <div class="row">
                            <h4 class="m-t-0 header-title text-center"><b>Mise à jour de l'établissement</b></h4><br>
                        <div class="col-md-6">
                            {# {{ form_start(form) }} #}
                            {{ form_start(edit_form) }}
                                <div class="form-group">
                                    {{form_label(edit_form.ville)}}
                                    {{form_errors(edit_form.ville)}}
                                    {{form_widget(edit_form.ville, {'attr':{'class':'form-control'}})}}
                                </div>
                                <div class="form-group">
                                    {{form_label(edit_form.nomFrancais)}}
                                    {{form_errors(edit_form.nomFrancais)}}
                                    {{form_widget(edit_form.nomFrancais, {'attr':{'class':'form-control'}})}}
                                </div>
                                <div class="form-group">
                                    {{form_label(edit_form.deviseFrancais)}}
                                    {{form_errors(edit_form.deviseFrancais)}}
                                    {{form_widget(edit_form.deviseFrancais, {'attr':{'class':'form-control'}})}}
                                </div>
                    </div>
                    <div class="col-md-6">
                                <div class="form-group">
                                    {{form_label(edit_form.boitePostal)}}
                                    {{form_errors(edit_form.boitePostal)}}
                                    {{form_widget(edit_form.boitePostal, {'attr':{'class':'form-control'}})}}
                                </div>
                                <div class="form-group">
                                    {{form_label(edit_form.nomAnglais)}}
                                    {{form_errors(edit_form.nomAnglais)}}
                                    {{form_widget(edit_form.nomAnglais, {'attr':{'class':'form-control'}})}}
                                </div>
                                <div class="form-group">
                                    {{form_label(edit_form.deviseAnglais)}}
                                    {{form_errors(edit_form.deviseAnglais)}}
                                    {{form_widget(edit_form.deviseAnglais, {'attr':{'class':'form-control'}})}}
                                </div>
                    </div>
                    <table class="pull-right"><tr>
                            <td>
                                <button type="submit" class="btn btn-default waves-effect waves-light">Enregistrer</button>
                            </td>
                            <td>&nbsp;</td>
                            <td>
                                <a class="btn btn-white" href="{{ path('etablissement_index') }}">Retour à la liste</a>    
                            </td>
                            <td>&nbsp;</td>
                        </tr>
                    </table>
                        {{ form_end(edit_form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
