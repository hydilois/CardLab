{% extends 'base.html.twig' %}

{% block body %}
    <!-- Forms -->
    <div class="row">
        <div class="col-sm-12">
            <div class="card-box">
                <div class="row">
                        <h4 class="m-t-0 header-title text-center"><b>Enregistrer le nom de l'etablissement</b></h4><br>
                    <div class="col-md-6">
                        {{ form_start(form) }}
                            <div class="form-group">
                                {{form_label(form.ville)}}
                                {{form_errors(form.ville)}}
                                {{form_widget(form.ville, {'attr':{'class':'form-control'}})}}
                            </div>
                            <div class="form-group">
                                {{form_label(form.nomFrancais)}}
                                {{form_errors(form.nomFrancais)}}
                                {{form_widget(form.nomFrancais, {'attr':{'class':'form-control'}})}}
                            </div>
                            <div class="form-group">
                                {{form_label(form.deviseFrancais)}}
                                {{form_errors(form.deviseFrancais)}}
                                {{form_widget(form.deviseFrancais, {'attr':{'class':'form-control'}})}}
                            </div>
                </div>
                <div class="col-md-6">
                            <div class="form-group">
                                {{form_label(form.boitePostal)}}
                                {{form_errors(form.boitePostal)}}
                                {{form_widget(form.boitePostal, {'attr':{'class':'form-control'}})}}
                            </div>
                            <div class="form-group">
                                {{form_label(form.nomAnglais)}}
                                {{form_errors(form.nomAnglais)}}
                                {{form_widget(form.nomAnglais, {'attr':{'class':'form-control'}})}}
                            </div>
                            <div class="form-group">
                                {{form_label(form.deviseAnglais)}}
                                {{form_errors(form.deviseAnglais)}}
                                {{form_widget(form.deviseAnglais, {'attr':{'class':'form-control'}})}}
                            </div>
                </div>
                <button type="submit" class="btn btn-default waves-effect waves-light">Enregistrer</button>
                    {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}