{% extends 'base.html.twig' %}

{% block body %}
    <h1>Sexes list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sexe in sexes %}
            <tr>
                <td><a href="{{ path('sexe_show', { 'id': sexe.id }) }}">{{ sexe.id }}</a></td>
                <td>{{ sexe.nom }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('sexe_show', { 'id': sexe.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('sexe_edit', { 'id': sexe.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('sexe_new') }}">Create a new sexe</a>
        </li>
    </ul>
{% endblock %}
