        </div>
    </div>
    <div class="row">
        <div class="col-md-offset-3 col-sm-offset-1 col-xs-offset-1 col-md-7 col-sm-11 col-xs-11">
            <div class="form-group">
                {{ form_label(form.redoublant, 'Redoublant: ', {'label_attr': {'class': 'control-label'}}) }}
                <div>
                    {{ form_widget(form.redoublant, {'attr': {'class': 'form-control'}})  }}
                </div>
            </div>
        </div>
    </div>

    <input type="submit" value="Create" />
    {{ form_end(form) }}

    <ul>
        <li>
            <a href="{{ path('inscription_index') }}">Back to the list</a>
        </li>
    </ul>
{% endblock %}
