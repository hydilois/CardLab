{% extends 'base.html.twig' %}

{% block body %}
    {{ form_start(edit_form) }}
    <div class="row">
        <div class="col-md-offset-1 col-md-10">
            <section class="panel">
                <header class="panel-heading text-center">
                    Modifier un enseignement
                </header>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_label(edit_form.matiere, "Matiere") }}
                                {{ form_widget(edit_form.matiere, {'attr':{'class':'form-control'}}) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_label(edit_form.enseignant, "Enseignant") }}
                                {{ form_widget(edit_form.enseignant, {'attr':{'class':'form-control'}}) }}
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_label(edit_form.classe, "Classe") }}
                                {{ form_widget(edit_form.classe, {'attr':{'class':'form-control'}}) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_label(edit_form.coefficient, "Coefficient") }}
                                {{ form_widget(edit_form.coefficient, {'attr':{'class':'form-control'}}) }}
                            </div>
                        </div>
                    </div>
                    <div class="row" >
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_label(edit_form.annee, "Annee") }}
                                {{ form_widget(edit_form.annee, {'attr':{'class':'form-control'}}) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_label(edit_form.nombreHeuresAnnuel, "nombre d'heure Annuel") }}
                                {{ form_widget(edit_form.nombreHeuresAnnuel, {'attr':{'class':'form-control'}}) }}
                            </div>
                        </div>
                    </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    {{ form_label(edit_form.nombreLeconsAnnuel, "nombre de leçons Annuel") }}
                                    {{ form_widget(edit_form.nombreLeconsAnnuel, {'attr':{'class':'form-control'}}) }}
                                </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_label(edit_form.titulaire, "Titulaire") }}
                                {{ form_widget(edit_form.titulaire, {'attr':{'class':'form-control'}}) }}
                            </div>
                        </div>
                        </div>
                        <button type="submit" class="btn btn-primary">Enregistrer</button>
                        <a class="btn btn-default" href="{{path('estdispense_index')}}">Retour à la liste</a>

                </div>
            </section>
        </div>
    </div>
    {{ form_end(edit_form) }}
{% endblock %}
