{% extends 'base.html.twig' %}

{% block contenu %}
    <div class="row">
        <div class="col-sm-12">
        <section class="panel">
        <header class="panel-heading text-center">
            <h1 class="text-center"> Année Academique</h1>
            <a class="btn btn-default pull-left" href="{{path('annee_new')}}">Nouvelle Année</a><br><br>
        </header>
        <div class="panel-body">
        <div class="adv-table">
        <table  class="display table table-bordered table-striped" id="dynamic-table">
            <thead>
            <tr>
                <th>Actions</th>
                <th>Année début</th>
                <th>Année Fin</th>
                <th>Année Académique</th>
                <th>Année En Cours ?</th>
            </tr>
            </thead>
            <tbody>
            {% for annee in annees %}
                <tr>
                <tr>
                    <td><a class="btn btn-success" href="{{path('annee_edit',{id:annee.id})}}">Modifier</a></td>
                    <td>{{ annee.anneeDebut }}</td>
                    <td>{{ annee.anneeFin }}</td>
                    <td>{{ annee.anneeScolaire }}</td>
                    <td> {% if annee.isAnneeEnCour %}
                            <span class="label label-default">OUI</span>
                            {% else %}
                                <span class="label label-danger">NON</span>
                    {% endif %}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        </div>
        </div>
        </section>
        </div>
{% endblock %}