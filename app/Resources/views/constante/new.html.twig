{% extends 'base.html.twig' %}

{% block body %}
    {{ form_start(form) }}
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            <section class="panel">
                <header class="panel-heading text-center">
                    Enregistrement d'une Nouvelle classe
                </header>
                <div class="panel-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    {{ form_label(form.ville, "Vile ou localité") }}
                                    {{ form_widget(form.ville, {'attr':{'class':'form-control'}}) }}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    {{ form_label(form.nomFrancais, "Nom en Français") }}
                                    {{ form_widget(form.nomFrancais, {'attr':{'class':'form-control'}}) }}
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    {{ form_label(form.nomAnglais, "Nom en Anglais") }}
                                    {{ form_widget(form.nomAnglais, {'attr':{'class':'form-control'}}) }}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    {{ form_label(form.deviseFrancais, "Devise en Français") }}
                                    {{ form_widget(form.deviseFrancais, {'attr':{'class':'form-control'}}) }}
                                </div>
                            </div>
                        </div>
                        <div class="row"> 
                            <div class="col-md-6">
                                <div class="form-group">
                                    {{ form_label(form.deviseAnglais, "Devise en anglais") }}
                                    {{ form_widget(form.deviseAnglais, {'attr':{'class':'form-control'}}) }}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    {{ form_label(form.boitePostal, "Boite postal") }}
                                    {{ form_widget(form.boitePostal, {'attr':{'class':'form-control'}}) }}
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    {{ form_label(form.logo, "Logo") }}
                                    {{ form_widget(form.logo, {'attr':{'class':'form-control'}}) }}
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary">Enregistrer</button>
                </div>
            </section>
        </div>
    </div>
    {{ form_end(form) }}
        <script>
        var logo = document.getElementById('configbundle_constante_logo');
        logo.name = 'avatar';
    </script>
{% endblock %}
