{% extends 'base.html.twig' %}

{% block body %}
    <h1>Student</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ student.id }}</td>
            </tr>
            <tr>
                <th>Matricule</th>
                <td>{{ student.matricule }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ student.nom }}</td>
            </tr>
            <tr>
                <th>Datenaissance</th>
                <td>{% if student.dateNaissance %}{{ student.dateNaissance|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Lieunaissance</th>
                <td>{{ student.lieuNaissance }}</td>
            </tr>
            <tr>
                <th>Nompere</th>
                <td>{{ student.nomPere }}</td>
            </tr>
            <tr>
                <th>Nommere</th>
                <td>{{ student.nomMere }}</td>
            </tr>
            <tr>
                <th>Adressepere</th>
                <td>{{ student.adressePere }}</td>
            </tr>
            <tr>
                <th>Adressemere</th>
                <td>{{ student.adresseMere }}</td>
            </tr>
            <tr>
                <th>Personneacontacter</th>
                <td>{{ student.personneAcontacter }}</td>
            </tr>
            <tr>
                <th>Dernieretablissementfreq</th>
                <td>{{ student.dernierEtablissementFreq }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td><img src="{{asset('Uploads/Photos/' ~ student.photo)}}" height="75px" width="100px"/></td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('student_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('student_edit', { 'id': student.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
            <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
