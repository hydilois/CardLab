{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="text-center">Liste des cycles</h1>
     <a class="btn btn-primary" href="{{ path('cycle_new') }}">Ajouter un cycle</a>
    <table  class="display table table-bordered table-striped" id="dynamic-table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for cycle in cycles %}
            <tr>
                <td><a href="{{ path('cycle_show', { 'id': cycle.id }) }}">{{ cycle.id }}</a></td>
                <td>{{ cycle.nom }}</td>
                <td>
                    <a class="btn btn-success" href="{{ path('cycle_edit', { 'id': cycle.id }) }}">Mofifier</a>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% include '/categorie/extras_categorie.css.html.twig' %}
    {% include '/categorie/extras_categorie.js.html.twig' %}
{% endblock %}
