{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="text-center"> Liste des Evaluations</h1>

    <table class="display table table-bordered table-striped" id="dynamic-table">
        <thead>
            <tr>
                <th>#</th>
                <th>Elève</th>
                <th>Classe</th>
                <th>Note</th>
                <th>Année</th>
                {# <th>Actions</th> #}
            </tr>
        </thead>
        <tbody>
        {% for evaluation in evaluations %}
            <tr>
                <td>{{ evaluation.id }}</td>
                <td>{{ evaluation.student }}</td>
                <td>{{ evaluation.classe }}</td>
                <td>{{ evaluation.note }}</td>
                <td>{{ evaluation.annee }}</td>
                {# <td>
                        <a class="btn btn-info" href="{{ path('evaluation_show', { 'id': evaluation.id }) }}">Détails</a>
                        <a class="btn btn-success" href="{{ path('evaluation_edit', { 'id': evaluation.id }) }}">Modifier</a>
                </td> #}
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% include '/categorie/extras_categorie.css.html.twig' %}
    {% include '/categorie/extras_categorie.js.html.twig' %}
{% endblock %}
