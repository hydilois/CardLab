{% extends 'base.html.twig' %}

{% block body %}
    {{ form_start(form) }}
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            <section class="panel">
                <header class="panel-heading text-center">
                    Enregistrement d'une Nouvelle classe
                </header>
                <div class="panel-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    {{ form_label(form.nom, "Nom") }}
                                    {{ form_widget(form.nom, {'attr':{'class':'form-control'}}) }}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    {{ form_label(form.abreviation, "Abreviation") }}
                                    {{ form_widget(form.abreviation, {'attr':{'class':'form-control'}}) }}
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    {{ form_label(form.classePere, "Classe p√®re") }}
                                    {{ form_widget(form.classePere, {'attr':{'class':'form-control'}}) }}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    {{ form_label(form.classeNext, "Classe suivante") }}
                                    {{ form_widget(form.classeNext, {'attr':{'class':'form-control'}}) }}
                                </div>
                            </div>
                        </div>
                        <div class="row"> 
                            <div class="col-md-6">
                                <div class="form-group">
                                    {{ form_label(form.cycle, "Cycle") }}
                                    {{ form_widget(form.cycle, {'attr':{'class':'form-control'}}) }}
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary">Enregistrer</button>
                </div>
            </section>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}


