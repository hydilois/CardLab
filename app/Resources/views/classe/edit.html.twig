{% extends 'base.html.twig' %}

{% block body %}
    {{ form_start(edit_form) }}
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            <section class="panel">
                <header class="panel-heading text-center">
                    Mise à jour d'une classe
                </header>
                <div class="panel-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    {{ form_label(edit_form.nom, "Nom") }}
                                    {{ form_widget(edit_form.nom, {'attr':{'class':'form-control'}}) }}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    {{ form_label(edit_form.abreviation, "Abreviation") }}
                                    {{ form_widget(edit_form.abreviation, {'attr':{'class':'form-control'}}) }}
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    {{ form_label(edit_form.classePere, "Classe père") }}
                                    {{ form_widget(edit_form.classePere, {'attr':{'class':'form-control'}}) }}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    {{ form_label(edit_form.classeNext, "Classe suivante") }}
                                    {{ form_widget(edit_form.classeNext, {'attr':{'class':'form-control'}}) }}
                                </div>
                            </div>
                        </div>
                        <div class="row"> 
                            <div class="col-md-6">
                                <div class="form-group">
                                    {{ form_label(edit_form.cycle, "Cycle") }}
                                    {{ form_widget(edit_form.cycle, {'attr':{'class':'form-control'}}) }}
                                </div>
                            </div>
                        </div>
                </div>
            </section>
        </div>
    </div>
    <div class="row">
        <div class="col-md-offset-3">
        <table class="pull-left">
            <tr>
                <td> <input class="btn btn-success" type="submit" value="Enregistrer" /></td>
    {{ form_end(edit_form) }}
                <td>&nbsp;&nbsp;</td>
                <td>
                    {{ form_start(delete_form) }}
                    <input class="btn btn-danger" type="submit" value="Suprimer">
                    {{ form_end(delete_form) }}
                </td>
                <td>&nbsp;&nbsp;</td>
                <td><a class="btn btn-default" href="{{ path('classe_index') }}">Retour à la liste</a></td>
            </tr>
        </table>
        </div>
    </div>
{% endblock %}



